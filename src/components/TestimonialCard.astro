---
interface Props {
  imageSrc: string;
  quote: string;
  author: string;
}

const { imageSrc, quote, author } = Astro.props;
---

<figure class="flex flex-col h-full rounded-lg bg-white p-6 shadow-lg">
  <img alt={`Photo of ${author}`} class="mx-auto h-24 w-24 rounded-full object-cover" src={imageSrc} />
  <blockquote class="mt-6 text-center text-medium-gray font-body flex-grow">
    <p>"{quote}"</p>
  </blockquote>
  <figcaption class="mt-4 text-center text-sm font-bold text-off-black font-sans">{author}</figcaption>
</figure>